# GraphQL schema example
#
# https://gqlgen.com/getting-started/
scalar Time

type Category {
    id: Int!
    name: String!

    totalTime: Int!
    todayTime: Int!
}

type Task {
    id: Int!
    name: String!
    categoryID: Int!
    done: Boolean!
    createdAt: Time
    updatedAt: Time

    category: Category
    totalMs: Int
    totalToday: Int
    totalTimeFor(day: String!): Int!
    totalTimeForLast(days: Int!, hours: Int!): Int!
    lastStat: TaskStatistic
}

type TaskStatistic {
    id: Int!
    taskId: Int!
    milliseconds: Int!
    createdAt: Time
    updatedAt: Time
}

type Goal {
    id: Int!
    name: String!
    time: Int!
    categoryID: Int!
    createdAt: Time
    updatedAt: Time

    todayMs: Int!
}

type GoalStatistic {
    id: Int!
    goalId: Int!
    milliseconds: Int!
    createdAt: Time
    updatedAt: Time
}

type Query {
    categoriesList: [Category!]!

    task(id: Int!): Task!
    taskList: [Task!]!
    taskListByCategory(categoryID: Int!): [Task!]!

    goal(id: Int!): Goal!
    goalList: [Goal!]!

    statListByDate(date: String!): [TaskStatistic!]!
}

input NewCategory {
    name: String!
}

input NewTask {
    name: String!
    categoryID: Int!
}

input NewTaskStatistic {
    taskId: Int!
    ms: Int!
}

input NewGoal {
    name: String!
    categoryID: Int!
    time: Int!
}

input UpdateTask {
    ID: Int!
    done: Boolean
}

type Mutation {
    createCategory(input: NewCategory!): Category!

    createTask(input: NewTask!): Task!
    updateTask(input: UpdateTask!): Boolean!
    createTaskStatistic(input: NewTaskStatistic!): TaskStatistic!

    createGoal(input: NewGoal!): Goal!
}